{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Repo Studio",
  "version": "0.2.5",
  "identifier": "com.repostudio",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Repo Studio",
        "width": 800,
        "height": 600,
        "minWidth": 760,
        "minHeight": 200,
        "decorations": false,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "externalBin": [
      "binaries/ffmpeg"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "perMachine",
        "displayLanguageSelector": true
      }
    }
    
  },
  "plugins": {
    "updater": {
      "windows": {
        "installMode": "passive"
      },
      "dialog": {
        "title": "Update Available",
        "description": "A new version of Repo Studio is available. Would you like to update?",
        "okLabel": "Update",
        "cancelLabel": "Later"
      },
      "active": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEE0RjlEQTE4NDBGRUY5NUUKUldSZStmNUFHTnI1cEd1M1o4SEsrSjRZOGg0K0F0NzZFaUtUNDJTTjRmcGJrWjNSeHp5MXprazkK",
      "endpoints": [ "https://github.com/JohnKearney1/repostudio/releases/latest/download/latest.json" ]
    }
  }
}
